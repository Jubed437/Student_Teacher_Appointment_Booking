rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }

    match /users/{userId} {
      // All authenticated users can read profiles (needed for dashboard and teacher selection)
      allow read: if isAuthenticated();
      
      // Users can only create their own profile during registration
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Admins can update any user (to approve, change roles, etc.)
      // Users can update their own profile (restricted to non-role/approval fields if needed)
      allow update, delete: if isAdmin() || (isAuthenticated() && request.auth.uid == userId);
    }
    
    match /appointments/{appointmentId} {
      // Students can read their own appointments
      // Teachers can read appointments where they are the teacherId (email)
      // Admins can read all
      allow read: if isAdmin() || 
                    (isAuthenticated() && (resource.data.studentId == request.auth.uid || 
                                          resource.data.teacherId == request.auth.token.email));
      
      // Students can create appointments where they are the student
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      
      // Teachers can update status of appointments assigned to them
      // Admins can update or delete any
      allow update: if isAdmin() || 
                      (isAuthenticated() && resource.data.teacherId == request.auth.token.email);
      allow delete: if isAdmin();
    }
    
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAuthenticated();
    }
  }
}
